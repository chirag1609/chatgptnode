<link rel="stylesheet" href="/css/header.css">
<header>
   
    <nav>
      <div class="container" >
        <div style="display: flex;" >
          <a href="/"><img src="/img/logo2.png" alt="Logo" class="logo"></a>
          
            <span class="bot-title">AskMeAnything Bot</span>
        
        </div>
        
        <div>
          <ul class="nav-links">
            <% if (locals.user) { %>
              <li>
                <a href="/users/profile/<%= user.id %>">Welcome, <%= user.name %></a>
              </li>
              <li>
                <a href="/users/sign-out">Sign Out</a>
              </li>
            <% } else { %>
              <li>
                <a href="/users/sign-in">Sign In</a>
              </li>
              <li>
                <a href="/users/sign-up">Sign Up</a>
              </li>
            <% } %>
          </ul>
        </div>
        
      </div>
    </nav>
  </header>
  